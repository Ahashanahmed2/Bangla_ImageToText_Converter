<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>

  <body>
     <h3 class="text-light bg-secondary text-center">Bangla Image To Text Converter</h3>
    <h3 class="text-light bg-secondary text-center"> বাংলা ইমেজ থেকে টেক্স কনভার্টার </h3>

    <div class="container">
      <div class="row">
        <div class="col text-center text-warning bg-dark">UPLOAD FILE</div>
      </div>

      <div id="upload"></div>
      <hr />
      <div class="flex text-light bg-dark p-2 text-center">
<p id="aaa"></p>

</div>
      <hr/>
      <div class="row">
        <div class="col text-center text-warning bg-dark">DOWNLOAD FILE</div>
      </div>
      <div id="download"></div>
      <footer class="d-flex justify-content-around bg-warning">
        <div class="btn btn-dark">
          <a class="text-light" href="/">Back Home Page</a>
        </div>
        <div>
          <form action="/download" method="post">
            <button class="btn btn-info text-dark p-2">
              Download Zip file
            </button>
          </form>
        </div>
        <div>
          <form id="delete"></form>
        </div>
      </footer>

      
    </div>

   
    <script src="/socket.io/socket.io.js"></script>
    <script>
      let socket = io('<%= process.env.APP_URL %>');

      socket.on("upload", (msg) => {
        let upload = document.querySelector("#upload");

        let up = "<div class='row'> ";
        
          msg.forEach((element, index) => {
           
            up += `<div onclick="itemU('${element}')" class='col bg-warning text-dark m-2'>${element}</div>`;
            
          });
       

        up += "</div>";
        upload.innerHTML = up;
      });

      socket.on("download", (m) => {
        console.log(m)
        let download = document.querySelector("#download");
        let dow = "<div class='row'>";
        m.map((element, index) => {
          let name = element.replace(".text", "");

          dow += `<div onclick="if(confirm('item delete ${element}')== true){itemD('${element}')}" class='col bg-dark text-light m-1 px-2'><span class='bg-warning text-dark px-2'>${index}</span> <p>${name}</p></div>`;
        });
        dow += "</div>";
        download.innerHTML = dow;
      });

      socket.on("delete", (d) => {
        let de = document.querySelector("#delete");
        if (d) {
          console.log(d);
          de.innerHTML = `<button class='btn btn-danger text-light p-2'>
              Delete Zip file
            </button>`;
        }
      });

      socket.on("logg",(d)=>{
       document.querySelector("#aaa").textContent =` ${d.userJobId} - ${d.progress}`
      })

    </script>
    <script>
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    </script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
